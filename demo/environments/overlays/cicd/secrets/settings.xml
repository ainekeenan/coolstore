<settings>
    <pluginGroups>
    <pluginGroup>org.sonarsource.scanner.maven</pluginGroup>
    </pluginGroups>

    <servers>
    <server>
        <id>nexus-releases</id>
        <username>admin</username>
        <password>admin123</password>
    </server>
    <server>
        <id>nexus-snapshots</id>
        <username>admin</username>
        <password>admin123</password>
    </server>
    </servers>
    <mirrors>
    <mirror>
        <id>local-repository</id>
        <name>Local Nexus Maven Mirror</name>
        <url>http://nexus.dev-tools:8081/content/groups/public</url>
        <mirrorOf>*</mirrorOf>
    </mirror>
    </mirrors>

    <profiles>
    <profile>
        <id>nexus-internal</id>
        <properties>
        <repository.snapshots>http://nexus.dev-tools:8081/content/repositories/snapshots</repository.snapshots>
        <repository.releases>http://nexus.dev-tools:8081/content/repositories/releases</repository.releases>
        </properties>
    </profile>
    <profile>
        <id>sonar</id>
        <properties>
        <sonar.host.url>
            http://sonarqube.dev-tools:9000
        </sonar.host.url>
        <sonar.login>admin</sonar.login>
        <sonar.password>R@dhat1234</sonar.password>
        </properties>
    </profile>
    <profile>
        <id>pipeline</id>
        <properties>
            <binary.output.path>/workspace/app-binary</binary.output.path>
        </properties>
    </profile>
    </profiles>

    <activeProfiles>
    <activeProfile>nexus-internal</activeProfile>
    <activeProfile>sonar</activeProfile>
    <activeProfile>pipeline</activeProfile>
    </activeProfiles>
</settings>